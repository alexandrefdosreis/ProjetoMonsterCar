using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Carro : MonoBehaviour
{
    public float vel = 0.1f;
    public Rigidbody2D rb;
    public float r1 = 2;
    public float r2 = 2;
    private float tempo;

    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
    }
       
    void Update()
    {        
        tempo += Time.deltaTime;

        if(vel <= 18)
        {
            if (Input.GetKey(KeyCode.RightArrow) && tempo > 0.25f)
            {
                vel = vel + 0.5f;
                transform.Translate(new Vector3(vel * Time.deltaTime, 0, 0));
            } else if( vel >= 1)
            {
                vel = vel - 5f * Time.deltaTime ;
            }
        }
        if (vel > 18)
        {
            vel = 18;
        }
        


        if (Input.GetKey(KeyCode.X))
        {
            transform.Rotate(new Vector3(0, 0, r2)); 
        }
        if (Input.GetKey(KeyCode.Z))
        {
            transform.Rotate(new Vector3(0, 0, -r1));
        }
    }
  
    [System.Obsolete]
    private void OnTriggerEnter2D(Collider2D carro)
    {
        if (carro.gameObject.CompareTag("Vitoria"))
        {
            print("VITÃ“RIA!!");
            Application.LoadLevel("gameOver");
            
        }
    }
}
